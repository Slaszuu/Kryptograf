    <Color x:Key="SecondaryColor">#FF1B2A49</Color>

    <SolidColorBrush x:Key="TextBoxForegroundColor" Color="Black"/>
    <SolidColorBrush x:Key="TextBoxBackgroundColor" Color="Azure"/>

    <SolidColorBrush x:Key="ActiveButtonForegroundColor" Color="White"/>
    <SolidColorBrush x:Key="HoverButtonForegroundColor" Color="Gray"/>

    <SolidColorBrush x:Key="CopyButtonBackgroundColor" Color="#0078C3" />
    <SolidColorBrush x:Key="ShowHideButtonBackgroundColor" Color="DarkGray" />
    <SolidColorBrush x:Key="CleanButtonBackgroundColor" Color="LimeGreen" />
    <SolidColorBrush x:Key="EncryptButtonBackgroundColor" Color="#FF5DADE2" />
    <SolidColorBrush x:Key="DecryptButtonBackgroundColor" Color="#FFE74C3C" />
